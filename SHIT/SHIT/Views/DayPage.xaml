                            TextColor="DarkRed"
                            LineBreakMode="NoWrap"/>
                    <Label x:Name="lblDayOfWeek" Text="dayOfWeek" 
                           Grid.Column="1"
                            VerticalOptions="Start" 
                            HorizontalOptions="End"
                           HorizontalTextAlignment="End"                             
                            TextTransform="Uppercase"
                            FontSize="Medium"
                            FontFamily="MontBold"                
                            TextColor="DarkRed"
                            LineBreakMode="NoWrap"/>
                </Grid>

